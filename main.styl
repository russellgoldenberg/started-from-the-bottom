$bottom = rgb(97, 168, 172)
$bottom = rgb(109, 123, 132)
$bottom = rgb(100, 150, 150)
$top = rgb(200, 68, 64)
$top = rgb(255, 130, 136)
$top = rgb(230, 100, 100)
$neutral = rgb(160, 140, 120)
$bg = rgb(255, 250, 240)
$section-width = 360px
$section-margin = 20px

@font-face
	font-family 'Roboto'
	font-style normal
	font-weight 300
	src local('Roboto Light'), local('Roboto-Light'), url('fonts/roboto-v15-latin-300.woff2') format('woff2'), url('fonts/roboto-v15-latin-300.woff') format('woff')

@font-face
	font-family 'Roboto'
	font-style normal
	font-weight 400
	src local('Roboto Regular'), local('Roboto-Regular'), url('fonts/roboto-v15-latin-regular.woff2') format('woff2'), url('fonts/roboto-v15-latin-regular.woff') format('woff')

@font-face
	font-family 'Roboto'
	font-style normal
	font-weight 700
	src local('Roboto Bold'), local('Roboto-Bold'), url('fonts/roboto-v15-latin-700.woff2') format('woff2'), url('fonts/roboto-v15-latin-700.woff') format('woff')

$roboto = 'Roboto', Helvetica, Arial, sans-serif

body
	background $bg
	color #454545
	font-size 19px
	line-height 1.4
	font-family $roboto
	font-weight 400
	-webkit-font-smoothing antialiased

strong 
	font-weight 700

em 
	font-style italic

p 
	margin-bottom 1em
main 
	padding 0 1em

.hide 
	display none
	
.bottom 
	color $bottom

.top
	color $top

.intro
	max-width 35em
	margin 2em auto
	&-hed
		font-weight 700
		font-size 2em
		text-align center
		margin-bottom 0.5em
	&-byline
		text-align center

#container
	position relative
	width 100%
	overflow hidden

#sections
	max-width $section-width
	float left
	margin-top $section-margin
	section
		background-color $bg
		opacity 0.35
		min-height 67vh
		transition opacity 250ms ease-in-out
		&.graph-scroll-active 
			opacity 1

#graphic
	float left
	margin-left $section-margin
	margin-top $section-margin
	&.graph-scroll-fixed
		position fixed
		top 0px
		left $section-width + $section-margin
	&.graph-scroll-below
		position absolute
		bottom 0px
		margin-left $section-width + $section-margin

.axis
	font-size 11px

	path, line
		fill none
		stroke #ccc
		stroke-opacity 1
		shape-rendering crispEdges
	
	&--y
		path, line
			stroke none
	
		&-label
			font-size 13px
			fill #888

circle.wins  
	fill $neutral
	fill-opacity 0.33
	stroke none
	stroke-opacity 1
	&.bottom
		fill $bottom
		stroke $bottom
	&.top
		fill $top
		stroke $top
		
path.all
	fill none
	stroke $neutral
	stroke-width 2px
	stroke-opacity 0.1
	stroke-linejoin round
	stroke-linecap round

path.stretch-path
	fill none
	stroke $neutral
	stroke-opacity 0.2
	stroke-linejoin round
	stroke-linecap round

.madlib-name 
	outline none
	border none
	background none
	text-align center
	display inline-block
	font-family $roboto 
	font-size 19px
	color #454545
	border-bottom 1px dashed black

.annotations
	path
		fill none
		stroke $neutral
	text 
		fill $neutral
		font-family $roboto
		font-size 11px
#arrow 
	fill $neutral