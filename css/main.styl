$bottom = rgb(97, 168, 172)
$bottom = rgb(109, 123, 132)
$bottom = rgb(100, 150, 150)
$top = rgb(200, 68, 64)
$top = rgb(255, 130, 136)
$top = rgb(230, 100, 100)
$neutral = rgb(160, 140, 120)
$bg = rgb(255, 250, 240)
$section-width = 360px
$section-margin = 20px
$container-margin = 10px

$path = '../fonts'

@font-face
	font-family 'Roboto'
	font-style normal
	font-weight 300
	src local('Roboto Light'), local('Roboto-Light'), url($path + '/roboto-v15-latin-300.woff2') format('woff2'), url($path + '/roboto-v15-latin-300.woff') format('woff')

@font-face
	font-family 'Roboto'
	font-style normal
	font-weight 400
	src local('Roboto Regular'), local('Roboto-Regular'), url($path + '/roboto-v15-latin-regular.woff2') format('woff2'), url($path + '/roboto-v15-latin-regular.woff') format('woff')

@font-face
	font-family 'Roboto'
	font-style normal
	font-weight 700
	src local('Roboto Bold'), local('Roboto-Bold'), url($path + '/roboto-v15-latin-700.woff2') format('woff2'), url($path + '/roboto-v15-latin-700.woff') format('woff')

$roboto = 'Roboto', Helvetica, Arial, sans-serif
$desktop = 850px

body
	background $bg
	color #454545
	line-height 1.4
	font-size 16px
	font-family $roboto
	font-weight 400
	-webkit-font-smoothing antialiased
	@media only screen and (min-width: $desktop)
		font-size 19px

strong 
	font-weight 700

em 
	font-style italic

p 
	margin-bottom 1em

a 
	color white
	&:visited 
		color white
main 
	padding 0 10px

.hide 
	display none
	
.bottom 
	color $bottom

.top
	color $top

.intro
	background-color $bottom
	padding 2em 1em
	color darken($bottom, 60%)
	margin-bottom 2em
	&-content
		max-width 35em
		margin 0 auto
	&-hed
		font-weight 700
		font-size 1.6em
		text-align center
		margin-bottom 0.5em
	&-byline
		text-align center
	&-date
		text-align center
		font-size 0.8em

#container
	position relative
	width 100%
	overflow hidden

#sections
	margin-top 45px
	@media only screen and (min-width: 850px)
		max-width $section-width
		float left
		padding-left 0.5em
	section
		transition opacity 250ms ease-in-out
		min-height 75vh
		opacity 0
		@media only screen and (min-width: 850px)
			opacity 0.35
			min-height 67vh
			margin-top 0.25em
		&.graph-scroll-active 
			opacity 1

#graphic
	background-color $bg
	width 100%
	position fixed
	bottom 0
	left 0
	padding-top 10px
	padding-left 10px
	display none
	border-top 1px dotted $neutral
	&.graph-scroll-fixed
		display block
	&.graph-scroll-below
		display none
	@media only screen and (min-width: 850px)
		border none
		background-color transparent
		display block
		float left 
		margin-left $section-margin
		margin-top $section-margin
		position static
		padding 0
		width auto
		&.graph-scroll-fixed
			display block
			position fixed
			top 0px
			left $section-width + $section-margin - $container-margin
		&.graph-scroll-below
			display block
			position absolute
			bottom 0px
			margin-left $section-width + $section-margin

.axis
	font-size 11px

	path, line
		fill none
		stroke #ccc
		stroke-opacity 1
		shape-rendering crispEdges
	
	&--y
		path, line
			stroke none
	
		&-label
			font-size 13px
			fill #888

circle.wins  
	fill $neutral
	fill-opacity 0.33
	stroke none
	stroke-opacity 1
	cursor pointer
	&.bottom
		fill $bottom
		stroke $bottom
	&.top
		fill $top
		stroke $top
		
path.all
	fill none
	stroke $neutral
	stroke-width 2px
	stroke-opacity 0.1
	stroke-linejoin round
	stroke-linecap round

path.stretch-path
	fill none
	stroke $neutral
	stroke-opacity 0.2
	stroke-linejoin round
	stroke-linecap round

.madlib-name 
	outline none
	border none
	background none
	text-align center
	display inline-block
	font-family $roboto 
	font-size 19px
	color #454545
	border-bottom 1px dashed black

.annotations
	path
		fill none
		stroke $neutral
	text 
		fill $neutral
		font-family $roboto
		font-size 11px
#arrow 
	fill $neutral

.youtube 
	top -10%
	left -10%
	width 120%
	height 120%
	position fixed
	z-index -1
	opacity 0.3
	transition opacity 250ms linear
	&.transparent
		opacity 0
	
.stephen-curry
	@media only screen and (min-width: $desktop)
		background-color rgba($top, 0.2)
		padding 0 0.25em
		cursor pointer
		border 1px dashed $top
	
.outro
	margin-top 2em
	background-color $top
	color darken($top, 60%)
	padding 4em 1em
	ul 
		max-width 35em
		margin 0 auto
		li 
			text-align center

.tooltip-text
	font-size 13px
	fill lighten($neutral, 80%)
	tspan 
		font-weight 700

.tooltip-rect 
	fill rgba(darken($neutral, 10%), 0.8)